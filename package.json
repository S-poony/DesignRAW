{
  "name": "broco",
  "private": true,
  "version": "1.0.1",
  "type": "module",
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:e2e": "playwright test",
    "electron:dev": "concurrently \"vite\" \"electron .\"",
    "electron:build": "npx rimraf dist_electron && vite build && electron-builder"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/node": "^25.0.9",
    "concurrently": "^9.2.1",
    "electron": "^40.0.0",
    "electron-builder": "^26.4.0",
    "jsdom": "^27.4.0",
    "vite": "^5.0.0",
    "vitest": "^4.0.17"
  },
  "dependencies": {
    "dompurify": "^3.3.1",
    "electron-updater": "^6.7.3",
    "html2canvas": "^1.4.1",
    "jspdf": "^3.0.4",
    "jszip": "^3.10.1",
    "marked": "^17.0.1"
  },
  "build": {
    "appId": "com.spoony.broco",
    "productName": "BROCO",
    "directories": {
      "output": "dist_electron"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "public/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": false
    },
    "publish": {
      "provider": "github",
      "owner": "S-poony",
      "repo": "BROCO"
    }
  }
}